<div class="banner">
  <h1>Wikinimous</h1>
  <div class="banner-button"> <%= link_to 'Add article', new_article_path  %> </div>
</div>


<div class='container'>

<% @articles.each do |article| %>
  <div class="card">
    <h3> <%= link_to article.title, article_path(article) %> </h3>
    <p> <%= "#{article.content[0,200]}..." %></p>
    <span class="delete"><%= link_to '- delete -', article_path(article),
                    method: :delete,
                    data: { confirm: "Are you sure?" }
      %></span>
  </div>
<% end %>


</div>
